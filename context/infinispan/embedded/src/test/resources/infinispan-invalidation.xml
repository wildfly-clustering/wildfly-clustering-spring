<infinispan xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="urn:infinispan:config:16.0"
		xsi:schemaLocation="urn:infinispan:config:16.0 https://infinispan.org/schemas/infinispan-config-16.0.xsd urn:infinispan:config:store:remote:16.0 https://infinispan.org/schemas/infinispan-cachestore-remote-config-16.0.xsd">
	<cache-container name="default" default-cache="infinispan-server">
		<transport/>
		<invalidation-cache-configuration name="infinispan-server">
			<transaction mode="BATCH" locking="PESSIMISTIC"/>
			<persistence>
				<remote-store xmlns="urn:infinispan:config:store:remote:16.0" uri="hotrod://${infinispan.server.username}:${infinispan.server.password}@${infinispan.server.host}:${infinispan.server.port}?tcp_no_delay=true" cache="${infinispan.server.cache}" segmented="false" shared="true"/>
			</persistence>
		</invalidation-cache-configuration>
	</cache-container>
</infinispan>
