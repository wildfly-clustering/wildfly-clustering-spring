<arquillian xmlns="http://jboss.org/schema/arquillian" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
	<group qualifier="tomcat" default="true">
		<container qualifier="tomcat-1" mode="class">
			<configuration>
				<property name="catalinaHome">${project.build.directory}/tomcat-1</property>

				<property name="jmxPort">${tomcat1.jmx.port}</property>
				<property name="bindHttpPort">${tomcat1.http.port}</property>
				<property name="javaVmArguments">${tomcat1.runtime.parameters}</property>

				<property name="user">${tomcat.admin.username}</property>
				<property name="pass">${tomcat.admin.password}</property>
			</configuration>
		</container>
		<container qualifier="tomcat-2" mode="class">
			<configuration>
				<property name="catalinaHome">${project.build.directory}/tomcat-2</property>

				<property name="jmxPort">${tomcat2.jmx.port}</property>
				<property name="bindHttpPort">${tomcat2.http.port}</property>
				<property name="javaVmArguments">${tomcat2.runtime.parameters}</property>

				<property name="user">${tomcat.admin.username}</property>
				<property name="pass">${tomcat.admin.password}</property>
			</configuration>
		</container>
	</group>
</arquillian>